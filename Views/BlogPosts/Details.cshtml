@model BlogPost
@using DevDiary.Enums;
@using DevDiary.Services.Interfaces;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<AppUser> _UserManager
@inject IImageService _ImageService
@inject IBlogService _BlogService


@{
    ViewData["Title"] = "Details";
    bool isLiked = false;

    async Task SetIsLikedAsync()
    {
        // Use the null-conditional operator when calling GetUserId
        // and provide a default value using the null-coalescing operator
        string userId = _UserManager?.GetUserId(User) ?? string.Empty;
        isLiked = await _BlogService.UserLikedBlogAsync(Model.Id, userId);
    }

    SetIsLikedAsync().GetAwaiter().GetResult();
}



