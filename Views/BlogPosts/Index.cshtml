@model IPagedList<DevDiary.Models.BlogPost>
@using DevDiary.Services.Interfaces;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@using X.PagedList;
@inject IImageService _ImageService

@{
    ViewData["Title"] = "Index";
    string? searchString = ViewBag.SearchString;
    string? actionName = ViewBag.ActionName;

    string pageTitle = "";

    switch (actionName)
    {
        case "Index":
            pageTitle = "All Blogs";
            break;
        case "SearchIndex":
            pageTitle = $"Search for '{searchString}'";
            break;
        case "Popular":
            pageTitle = "Most Popular Posts";
            break;
        case "Category":
            pageTitle = $"Category: {ViewData["CategoryName"]}";
            break;
    }
}



<!-- Start Author Area  -->
<partial name="_AuthorAreaPartial" />
@* <partial name="_BlogPostSliderPartial" /> *@
<!-- End Author Area  -->




<!-- Start Post List Wrapper  -->
 <div class="axil-post-list-area axil-section-gap bg-color-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h2 class="title mb--40">@pageTitle</h2>
                </div>
            </div>

            <!-- Start Post List  -->
            <div class="col-lg-8 col-xl-8">

                @foreach (BlogPost blogPost in Model)
                {
                    <partial name="_BlogCardPartial" model="blogPost" />
                }

                <div>
                    <div>
                        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    </div>
                    @Html.PagedListPager(Model, pageNum => Url.Action(actionName, new { pageNum, searchString }),
                             new PagedListRenderOptions
                    {
                        LiElementClasses = new string[] { "my-page-item" },
                        PageClasses = new string[] { "my-page-link" }
                    })
                </div>
            </div>
            <!-- End Post List  -->

            <!-- Start Sidebar Area  -->
            <partial name="_SideBarPartial" />
            <!-- End Sidebar Area  -->
        </div>
    </div>
</div> 
<!-- End Post List Wrapper  -->
